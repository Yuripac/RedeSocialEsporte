<!DOCTYPE html>
<html>
<head>
  <title>RedeSocialEsporte</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="navbar-header">
      <a class='navbar-brand' href='/'>RedeSocialEsporte</a>
    </div>
    <div class='collapse navbar-collapse' id='bs-example-navbar-collapse-1'>
      <ul id="app-menu"class="nav navbar-nav pull-right">
      <% if current_user %>
        <li><%= link_to 'Perfil', edit_user_path(current_user) %></li>
        <li><%= link_to 'My Groups', my_groups_path %></li>
        <li><%= link_to "New group", new_group_path %></li>
        <li><%= link_to "Groups", groups_path %></li>
        <li><%= link_to "Logout", logout_path, method: :delete %></li>
      <% else %>
        <li><%= link_to "Login with Facebook", "/auth/facebook" %></li>
      <%end%>
      </ul>
  </nav>

  <% if notice %><p id='notice' class='alert alert-success'><%= notice %></p><% end%>
  <% if alert %><p id='alert' class='alert alert-danger'><%= alert %></p><% end %>

  <%= yield %>

</body>
</html>
